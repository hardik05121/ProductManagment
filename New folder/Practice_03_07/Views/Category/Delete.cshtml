@model Category

<h2>Are you sure want to delete This?</h2>

<form asp-action="DeletePost" asp-controller="Category" role="form" method="post">
    <input asp-for="Id" hidden />
    <div class="modal-body">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" disabled asp-for="Name" />
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Back</a>
    </div>
</form>