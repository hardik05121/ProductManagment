@model IEnumerable<Product>

<h2>Product List</h2>
<a class="btn btn-info" asp-action="Upsert">Add Product</a>

<br />
<br />

<table class="table table-striped border">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>

    </thead>
    <tbody>
        @foreach(var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Price</td>
                    <td>@obj.Category.Name</td>
                    <td><img style="width: 100px" src="@WC.ImagePath@obj.Image"/></td>
                    <td>
                        <a class="btn btn-warning" asp-action="Upsert" asp-controller="Product" asp-route-id="@obj.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@obj.Id">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>